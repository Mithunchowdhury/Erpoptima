@{
    ViewBag.Title = "RevaluationReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="text-center section-title">Fixed Assets Revaluation Report</h2>


<div class="row content" ng-controller="RevaluationController">

    <section class="col-sm-4 col-sm-offset-4">

        <div class="box box-primary">
            <div class="box-header" style="cursor: move;">

                @*<i class="fa fa-search"></i>
                    <h3 class="box-title"> Search</h3>*@
            </div>


            @using (Html.BeginForm("GetFreeProductList", "SalesReport", FormMethod.Get, new { area = "Sales", target = "_blank" }))
            {
                <div class="box-body">
                    

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4  col-xs-12" for="cmbAsset">Asset Name :</label>
                            <select class="col-sm-6  col-xs-12" ui-select2 ng-model="" name="txtAsset" id="cmbAsset" data-placeholder="Asset Name">
                                <option value=""></option>
                                <option ng-repeat="data in Invoice" value={{data.Id}}>{{data.Name}}</option>
                            </select>
                        </div>
                    </div>


                    <br />
                    <div class="form-group text-center">
                        <button type="submit" id="SearchButton" class="btn btn-primary">Show</button>
                        <button type="reset" id="SearchButton" class="btn btn-default">Reset</button>
                    </div>
                </div>




            }
        </div>
    </section>
    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }
    </style>
</div>
<script src="~/Scripts/Accounts/Report_FixedAssetRevaluationController.js"></script>
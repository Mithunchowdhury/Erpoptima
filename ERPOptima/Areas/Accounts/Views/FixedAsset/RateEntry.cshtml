@{
    ViewBag.Title = "RateEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool add = true;
    bool edit = true;
    bool delete = true;
    if (Request.IsAuthenticated)
    {
        add = (bool)ViewData["Add"];
        edit = (bool)ViewData["Edit"];
        delete = (bool)ViewData["Delete"];
    }
}

<h2 class="text-center section-title">Rate Entry</h2>
<div ng-controller="RateEntryController">
    <section class="margin-top-10 col-sm-6 col-sm-offset-3 col-xs-12">
        <div class="box box-primary ">
            <div class="box-header">
                <h3 class="box-title">Depreciation Rate</h3>
            </div>
            <div class="box-body">
                <form name="WebForm">
                    <div class="form-group">
                        <label for="CmbAccName">Account Name</label>
                        <select id="CmbAccName" placeholder="Pick an Corporate Type" ng-model="" class="form-control" ui-select2>
                            <option value=""></option>
                            <option data-ng-repeat="data in CorporateTypesList" value="{{data.Id}}">{{data.Type}}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="txtRate">Rate</label>
                        <input type="number" placeholder="" ng-model="" class="form-control" id="txtRate" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="txtDelDate">
                            Date<span style="color:red">*</span>
                            <!--<span style="color:red" data-ng-show="WebForm.nmDelDate.$dirty && WebForm.nmDelDate.$error.required">Required</span>-->
                        </label>
                        <input type="text" class="form-control dpkr" id="txtDelDate" name="nmDelDate" ng-model="" placeholder=""
                               datetimepicker required>
                    </div>
                    <div class="form-group">
                        <label for="txtRemarks">Remarks</label>
                        <textarea cols="20" rows="2" ng-model="" class="form-control" id="txtRemarks" placeholder=""></textarea>
                    </div>


                    <div class="text-center">
                        @if (add || edit)
                        {
                            <button type="submit" class="btn btn-success" ng-disabled="WebForm.$invalid" ng-click="Save(WebForm.$valid)">Save</button>
                        }
                        @if (delete)
                        {
                            <button type="submit" class="btn btn-danger" ng-disabled="ButtonDisabled" ng-click="Delete()">Delete</button>
                        }
                        <button type="reset" class="btn btn-default" ng-click="Reset()">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 280px;
            overflow-y: auto;
        }
    </style>

</div>

<script src="~/Scripts/Accounts/RateEnrtyController.js"></script>

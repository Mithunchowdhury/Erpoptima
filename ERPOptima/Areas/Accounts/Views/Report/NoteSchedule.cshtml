@{
    ViewBag.Title = "Note Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">

    <h2 class="text-center section-title">Note Schedule Report</h2>
</section>

<div class="row content" ng-controller="NoteScheduleReportController">

    <section class="col-sm-6  col-sm-offset-3">

        <div class="box box-primary">
            <div class="box-header" style="cursor: move;">

                @*<i class="fa fa-search"></i>
                <h3 class="box-title"> Search</h3>*@
            </div>


            @using (Html.BeginForm("GetNoteSchedule", "Report", FormMethod.Get, new { area = "Accounts", name = "Search", id = "Search", target = "_blank" }))
            {
                <div class="box-body">
                    @*<form name="Search">*@
                    <div class="row">
                        <div class="form-group col-xs-6">
                            <label>Date From</label>
                            <input type="text" class="form-control datetimepicker" name="DateFrom" ng-model="NoteScheduleSearchViewModel.DateFrom" required>
                        </div>

                        <div class="form-group col-xs-6">
                            <label>Date To</label>
                            <input type="text" class="form-control datetimepicker" name="ToDate" ng-model="NoteScheduleSearchViewModel.ToDate" required>
                        </div>
                    </div>

                    <div class="form-group">
                       
                            <label class="">Cost Center :</label>
                        <select class="selectUI" data-ui-select2="costCenter" name="CostcenterId" ng-model="NoteScheduleSearchViewModel.CostcenterId">
                            <option value=""></option>
                            <option ng-repeat="costcenter in CostCenters" value="{{costcenter.Id}}">{{costcenter.Name}}</option>
                        </select>
                        
                    </div>
                    <div class="form-group">
                        
                            <label class="">Transactional Head:</label>
                        <select class="selectUI" data-ui-select2="transactionalHead" name="AnFChartOfAccountId" ng-model="NoteScheduleSearchViewModel.AnFChartOfAccountId" required>
                            <option value=""></option>
                            <option ng-repeat="transactionalHead in TransactionalHeads" value="{{transactionalHead.Id}}">{{ transactionalHead.Name}}</option>
                        </select>
                        
                    </div>
                    

                    <!--<div class="form-group">

                        <div class="radio-inline ">
                            <label class="">
                                <input type="radio" name="Type" ng-model="Ledger.Type" value="1" required />
                                Note Schedule
                            </label>
                        </div>
                        <div class="radio-inline">
                            <label class="">
                                <input type="radio" name="Type" ng-model="Ledger.Type" value="2" required />
                                Note Schedule ProjectWise
                            </label>
                        </div>

                    </div>-->
                    <div class="form-group center-align">
                        <button type="submit" id="VoucherButton" class="btn btn-primary" ng-disabled="Search.$invalid" @*ng-click="GetVoucher()"*@>Show Report</button>
                    </div>
                    @*</form>*@
                </div><!-- /.box-body-->

               


            }
        </div>

    </section>

</div>


@section scripts{

    <script type="text/javascript" src="@Url.Content("/Scripts/Accounts/Report_NoteSchedule.js")"></script>

}

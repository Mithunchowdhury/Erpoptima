@{
    ViewBag.Title = "Profit Loss";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">

    <h2 class="text-center section-title">Profit/Loss Report</h2>
</section>

<div class="row content" ng-controller="NoteScheduleReportController">

    <section class="col-sm-7  col-sm-offset-2">

        <div class="box box-primary">
            <div class="box-header" style="cursor: move;">

                @*<i class="fa fa-search"></i>
                <h3 class="box-title"> Search</h3>*@
            </div>


            @using (Html.BeginForm("GetProfitLoss", "Report", FormMethod.Get, new { area = "Accounts", name = "Search", id = "Search", target = "_blank" }))
            {
                <div class="box-body">
                    @*<form name="Search">*@
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label>Date From</label>
                            <input type="text" class="form-control datetimepicker" ng-model="search.FromDate" name="FromDate" required>
                        </div>

                        <div class="form-group col-sm-6">
                            <label>Date To</label>
                            <input type="text" class="form-control datetimepicker" ng-model="search.ToDate" name="ToDate" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4  col-xs-12">Company Name :</label>

                            <select class="col-sm-8  col-xs-12" data-ui-select2 ng-model="search.SecCompanyId" name="SecCompanyId" data-placeholder="Pick a Company">
                                <option value=""></option>
                                <option ng-repeat="CompanyInfos in CompanyInfoCombo" value={{CompanyInfos.Id}}>{{CompanyInfos.Name}}</option>
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="form-group center-align">
                        <button type="submit" id="SearchButton" name="SearchButton" class="btn btn-primary" ng-disabled="Search.$invalid">Show Report</button>
                    </div>
                    @*</form>*@
                </div><!-- /.box-body-->
            }
        </div>
    </section>
</div>

@section scripts{
    <script type="text/javascript" src="@Url.Content("/Scripts/Accounts/Report_ProfitLoss.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/blockUI.js")"></script>
}



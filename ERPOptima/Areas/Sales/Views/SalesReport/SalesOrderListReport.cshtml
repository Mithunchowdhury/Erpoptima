@{
    ViewBag.Title = "SalesOrderListReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header ">
    <h2 class="text-center section-title">Sales Order List Report</h2>
</section>

<div class="row content">

    <section class="col-sm-4 col-sm-offset-4">

        <div class="box box-primary">

            @using (Html.BeginForm("GetSalesOrderListReport", "SalesReport", FormMethod.Get, new { area = "Sales", target = "_blank" }))
            {
                <div class="box-body">
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4 col-xs-12">
                                Start Date<span style="color:red">*</span>
                            </label>
                            <div class="col-sm-8  col-xs-12">
                                <input type="text" class="form-control dpkr " id="txtStartDate" name="StartDate" ng-model="StartDate" required placeholder=""
                                       datetimepicker>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4 col-xs-12">
                                End Date<span style="color:red">*</span>
                            </label>
                            <div class="col-sm-8  col-xs-12">
                                <input type="text" class="form-control dpkr " id="txtEndDate" name="EndDate" ng-model="EndDate" placeholder=""
                                       required datetimepicker>
                            </div>
                        </div>
                    </div>

                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-4 col-xs-12">Status:</label>
                                <select id="selStatus" class="col-sm-6 col-xs-12" ui-select2 ng-model="Status" name="Status" data-placeholder="Pick a status">
                                    <option value="" ></option>
                                    <option value="0">New</option>
                                    <option value="1">In Progress</option>
                                    <option value="2">Completed</option>
                                </select>
                            </div>
                        </div>

                        <br />

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Show</button>                         
                            <button type="reset" id="btnReset" class="btn btn-default" ng-click="Status=''">Reset</button>                         
                        </div>
                    </div>

            }
        </div>
    </section>

    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }
    </style>

   




</div>


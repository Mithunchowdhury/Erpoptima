@{
    ViewBag.Title = "Field Visit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool add = true;
    bool edit = true;
    bool delete = true;
    if (Request.IsAuthenticated)
    {
        add = (bool)ViewData["Add"];
        edit = (bool)ViewData["Edit"];
        delete = (bool)ViewData["Delete"];
    }
}

<h2 class="text-center section-title">Field Visit</h2>
<div ng-controller="FieldVisit">
    <section class="margin-top-10 col-sm-6 col-sm-offset-3 col-xs-12">
        <div class="box box-primary ">
            <div class="box-header">
                <h3 class="box-title">Visit Information</h3>
            </div>
            <div class="box-body">
                <form name="FieldVisit">
                    <div class="form-group">
                        <label for="txtPrefix">Reference Number<span style="color:red">*</span></label>
                        <input type="text" placeholder="Reference Number" ng-model="FieldVisit.RefNo" class="form-control"
                               readonly id="txtRefNo" select-on-load/>

                    </div>
                    <div class="form-group">
                        <label for="txtName">Customer Name</label>
                        <input type="text" placeholder="Customer Name" ng-model="FieldVisit.CustomerName" class="form-control" id="txtCustomerName" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="txtRemarks">Customer Details</label>
                        <textarea cols="20" rows="2" ng-model="FieldVisit.Remarks" class="form-control" id="txtRemarks" placeholder=""></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtName">Customer Mobile no</label>
                        <input type="text" ng-model="FieldVisit.CustomerMobileNo" class="form-control" id="txtCustomerMobileNo" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="txtPrefix">Type</label>
                        <select id="CmbMoule" placeholder="Pick an Corporate Type" ng-model="CorporateTypeId" class="selectUI" ui-select2>
                            <option value=""></option>
                            <option data-ng-repeat="data in CorporateTypesList" value="{{data.Id}}">{{data.Type}}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="txtCustomerDetails">Details</label>
                        <input type="text" ng-model="FieldVisit.CustomerDetails" class="form-control" id="txtCustomerDetails" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="txtFollowupDate">Next follow-up Date</label>
                        <input type="text" ng-model="FieldVisit.FollowupDate" class="form-control" id="txtFollowupDate" placeholder="" datetimepicker required readonly>
                    </div>
                    <div class="text-center">
                        @if (add || edit)
                            {
                           <button type="submit" class="btn btn-success" ng-disabled="FieldVisit.$invalid" ng-click="Save(FieldVisit.$valid)">Save</button>
                        }
                       
                        <button type="reset" class="btn btn-default" ng-click="Reset()">Reset</button>
                    </div>
                </form>
</div>
        </div>
    </section>
    
    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 280px;
            overflow-y: auto;
        }
    </style>

</div>


@section scripts{

    <script type="text/javascript" src="@Url.Content("/Scripts/Sales/FieldVisitController.js")"></script>

}
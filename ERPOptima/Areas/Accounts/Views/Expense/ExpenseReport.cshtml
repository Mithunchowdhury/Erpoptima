@{
    ViewBag.Title = "ExpenseReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header ">
    <h2 class="text-center section-title">Expense Report</h2>
</section>

<div class="row content" ng-controller="ExpenseReportController">

    <section class="col-sm-6  col-sm-offset-3">

        <div class="box box-primary">

            <div class="box-header" style="cursor: move;">

                @*<i class="fa fa-search"></i>
            <h3 class="box-title"> Search</h3>*@
            </div>

            @using (Html.BeginForm("GetAnfExpenseReport", "Expense", FormMethod.Get, new { area = "Accounts", name = "Search", id = "Search", target = "_blank" }))
            {
                <div class="box-body">
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4 col-xs-12">
                                Date From:<span style="color:red">*</span>
                            </label>
                            <div class="col-sm-8  col-xs-12">
                                <input type="text" class="form-control datetimepicker" name="DateFrom" ng-model="ExpenseSearchViewModel.DateFrom" placeholder="">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4 col-xs-12">
                                Date To:<span style="color:red">*</span>
                            </label>
                            <div class="col-sm-8  col-xs-12">
                                <input type="text" class="form-control datetimepicker" name="ToDate" ng-model="ExpenseSearchViewModel.ToDate" placeholder="">
                            </div>
                        </div>
                    </div>

                    @*<div class="form-group">

                                <div class="row">
                                    <label class="col-sm-4 col-xs-12" for="cmbCoCenter">Cost Center:</label>
                                    <select class="col-sm-8  col-xs-12 selectUI" ng-model="" id="cmbCoCenter" name="nmCoCenter" data-placeholder="Pick a Office">
                                        <option value=""></option>
                                        <option ng-repeat="data in Office" value={{data.Id}}>{{data.Name}}</option>
                                    </select>
                                </div>
                        </div>*@
                    <div class="form-group">
                        <label for="CostcenterId">Cost Center :<span style="color:red">*</span></label>
                        <select class="selectUI" data-placeholder="Pick a Cost Center" data-ui-select2="costCenter" id="CostcenterId" name="CostcenterId" ng-model="ExpenseSearchViewModel.CostcenterId">
                            <option value=""></option>
                            <option ng-repeat="costcenter in CostCenters" value="{{costcenter.Id}}">{{costcenter.Name}}</option>
                        </select>
                    </div>

                    <br />

                    <div class="form-group text-center">
                        <button type="submit" id="SearchButton" class="btn btn-primary" ng-disabled="Search.$invalid">Show</button>
                        <button type="reset" id="resetButton" ng-click="Reset()" class="btn btn-default">Reset</button>
                    </div>
                </div>

            }
        </div>
    </section>

    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }
    </style>

</div>

@section scripts{

    <script type="text/javascript" src="@Url.Content("/Scripts/Accounts/Report_ExpenseControlle.js")"></script>
}



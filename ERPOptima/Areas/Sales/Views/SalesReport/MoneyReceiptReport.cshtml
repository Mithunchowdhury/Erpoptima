@{
    ViewBag.Title = "Money Receipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/Sales/ReportMoneyReceipt.js"></script>


<h2 class="text-center section-title">Money Receipt</h2>

<div class="row content" ng-controller="MoneyReceiptReport">

    <section class="col-sm-5 col-sm-offset-3">

        <div class="box box-primary">
            <div class="box-header" style="cursor: move;">

                @*<i class="fa fa-search"></i>
                    <h3 class="box-title"> Search</h3>*@
            </div>


            @using (Html.BeginForm("MoneyReceiptprint", "SalesReport", FormMethod.Get, new { area = "Accounts", name = "Search", id = "Search", target = "_blank" }))
            {
                <div class="box-body">


                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4  col-xs-12">Money Receipt No  :</label>
                            <select class="col-sm-8  col-xs-12" ui-select2 ng-model="CollectionEntryID" name="CollectionEntryID" data-placeholder="Pick a Money Receipt No" ng-change="ResourceInfo()">
                                <option value=""></option>
                                <option ng-repeat="data in Resources" value={{data.Id}}>{{data.RefNo}}</option>
                            </select>
                        </div>
                    </div>



                    <br />
                    <div class="form-group text-center">
                        <button type="submit" id="SearchButton" class="btn btn-primary">Show</button>
                        <button type="reset" id="SearchButton" class="btn btn-default" ng-click="Reset()">Reset</button>
                    </div>


                </div>




            }
        </div>
    </section>
    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }
    </style>
</div>

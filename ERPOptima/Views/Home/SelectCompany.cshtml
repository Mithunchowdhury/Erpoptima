@{
    ViewBag.Title = "Company Selection :: ERP Optima";
    Layout = "~/Views/Shared/_Home.cshtml";
}
<script src="~/Scripts/Common/CompanyController.js"></script>
<section class="form-box1" ng-controller="CompanyController">
    <div class="box box-info  bg-gray" style="margin-top: 175px; min-height: 130px; box-shadow: 5px 5px #b9571d; ">
        <div class="box-header">
            <h3 class="box-title">Company Selection</h3>
        </div>
        <div class="box-body" >

            <form>
                <div class="row">
                    <div class="form-group">
                        <label class="col-sm-2 col-xs-12">Company:</label>
                        <select id="cmbModule" class="col-sm-8" style="padding:0;margin-right:5px;" ng-model="companyId" data-ui-select2 required>
                            <option ng-repeat="company in companies" value={{company.Id}}>{{company.Name}}</option>
                        </select>
                        <button class="btn btn-success col-sm-1 " ng-click="setCompanyId()">   &nbsp;Go  &nbsp;<i class="glyphicon glyphicon-circle-arrow-right"></i> </button>
                    </div>

                    <div class="footer">
                        @*<button class="btn btn-success " ng-click="setCompanyId()">   Go   </button>*@
                    </div>

                </div>
            </form>

        </div>
    </div>
</section>

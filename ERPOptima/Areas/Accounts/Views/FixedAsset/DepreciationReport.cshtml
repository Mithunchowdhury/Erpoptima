@{
    ViewBag.Title = "DepreciationReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool add = true;
    bool edit = true;
    bool delete = true;
    if (Request.IsAuthenticated)
    {
        add = (bool)ViewData["Add"];
        edit = (bool)ViewData["Edit"];
        delete = (bool)ViewData["Delete"];
    }
}


<section class="content-header">

    <h2 class="text-center section-title">Depreciation Report</h2><hr />
</section>
<div ng-controller="DepreciationController">
    <section class="margin-top-10 col-sm-6 col-sm-offset-3 col-xs-12">
        <div class="box box-primary ">
            <div class="box-header">
                <h3 class="box-title">Depreciation</h3>
            </div>
            <div class="box-body">
                <form name="WebForm">
                    <div class="form-group">
                        <label for="CmbAsset">Asset Name</label>
                        <select id="CmbAsset" placeholder="Pick an Corporate Type" name="txtAsset" ng-model="CorporateTypeId" class="form-control" ui-select2>
                            <option value=""></option>
                            <option data-ng-repeat="data in CorporateTypesList" value="{{data.Id}}">{{data.Type}}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="txtDateForm">
                            Date From<span style="color:red">*</span>
                            <!--<span style="color:red" data-ng-show="WebForm.nmDelDate.$dirty && WebForm.nmDelDate.$error.required">Required</span>-->
                        </label>
                        <input type="text" class="form-control dpkr" id="txtDateForm" name="txtDateForm" ng-model="SalesDelivery.DeliveryDate" placeholder=""
                               datetimepicker required>
                    </div>
                    <div class="form-group">
                        <label for="txtDateTo">
                            Date To<span style="color:red">*</span>
                            <!--<span style="color:red" data-ng-show="WebForm.nmDelDate.$dirty && WebForm.nmDelDate.$error.required">Required</span>-->
                        </label>
                        <input type="text" class="form-control dpkr" id="txtDateTo" name="txtDateTo" ng-model="SalesDelivery.DeliveryDate" placeholder=""
                               datetimepicker required>
                    </div>

                    <div class="text-center">
                        @if (add || edit)
                        {
                            <button type="submit" class="btn btn-success" ng-disabled="WebForm.$invalid" ng-click="Save(WebForm.$valid)">Show</button>
                        }

                        <button type="reset" class="btn btn-default" ng-click="Reset()">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 280px;
            overflow-y: auto;
        }
    </style>

</div>
<script src="~/Scripts/Accounts/Report_DepreciationController.js"></script>
@{

    ViewBag.Title = "Trial Balance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Accounts/Report_TrialBalanceDetailsController.js"></script>
<section class="content-header">
    <h2 class="text-center section-title">Trial Balance</h2>
</section>

<div class="row content" ng-controller="TrialBalanceDetailsController">

    <section class="col-sm-4 col-sm-offset-4">

        <div class="box box-primary">
            <div class="box-header" style="cursor: move;">

                @*<i class="fa fa-search"></i>
                <h3 class="box-title"> Search</h3>*@
            </div>


            @using (Html.BeginForm("GetAnFTrialBalanceDetailsReport", "Report", FormMethod.Get, new { area = "Accounts", name = "Search", id = "Search", target = "_blank" }))
            {
                <div class="box-body">
                    @*<form name="Search">*@
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label>Date From</label>
                            <input type="text" class="form-control datetimepicker" ng-model="search.FromDate" name="FromDate" datetimepicker required>
                        </div>

                        <div class="form-group col-sm-6">
                            <label>Date To</label>
                            <input type="text" class="form-control" ng-model="search.ToDate" name="ToDate" datetimepicker required>
                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4 col-xs-12">Cost Center</label>
                            <select class="col-sm-8 col-xs-12" ui-select2 name="AnFCostCeterId" ng-model="search.AnFCostCeterId">
                                <option ng-repeat="data in CostCenters" value="{{data.Id}}">{{data.Name}}</option>
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <button type="submit" id="SearchButton" class="btn btn-primary">Show Report</button>
                    </div>
                </div>



              
            }
        </div>
    </section>
    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }
    </style>
</div>

@{
    ViewBag.Title = "Challan Statement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Accounts/Report_TrialBalanceDetailsController.js"></script>

    <h2 class="text-center section-title">Challan Statement</h2>
<hr />

<div class="row content" ng-controller="DeliveryChallen">

    <section class="col-sm-4 col-sm-offset-4">

        <div class="box box-primary">

            @using (Html.BeginForm("GetFreeProductList", "SalesReport", FormMethod.Get, new { area = "Sales", target = "_blank" }))
            {
                <div class="box-body">

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4  col-xs-12">Challen No :</label>
                            <select class="col-sm-8  col-xs-12" ui-select2 ng-model="ProductId" name="ProductId" data-placeholder="Pick a Product">
                                <option value="0"></option>
                                <option ng-repeat="data in Product" value={{data.Id}}>{{data.Name}}</option>
                            </select>
                        </div>
                    </div>


                    <br />
                    <div class="form-group text-center">
                        <button type="submit" id="SearchButton" class="btn btn-primary">Show</button>
                        <button type="reset" id="SearchButton" class="btn btn-default" ng-click="Reset()">Reset</button>
                    </div>
                </div>




            }
        </div>
    </section>
    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }
    </style>
</div>

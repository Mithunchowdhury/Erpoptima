@{
    ViewBag.Title = "Sales Incentive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="text-center section-title">Sales Incentive Report</h2>


<div class="row content" ng-controller="IncentivePayment">

    <section class="col-sm-6 col-sm-offset-3">

        <div class="box box-primary">
            <div class="box-header" style="cursor: move;">

            </div>

            @using (Html.BeginForm("ShowIncentiveReport", "SalesIncentiveSettings", FormMethod.Get, new { area = "Sales", target = "_blank" }))
            {
            <div class="box-body">
                <form name="InsentivePaymentReport">
                    <div class="form-group">
                        <label>
                            Sales Personnel                            
                        </label>
                        <select id="CmbPerson" name="salesPersonId" data-placeholder="Pick an Employee" ng-model="SearchObj.HrmEmployeeId" class="selectUI"
                                data-ui-select2 ng-change="Find()">
                            <option value=""></option>
                            <option ng-repeat="data in Employees" value={{data.Id}}>{{data.Name}}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>
                            Year
                        </label>
                        <select id="CmbYear" name="year" data-placeholder="Pick an Employee" ng-model="SearchObj.Year" class="selectUI" ng-change="Find()"
                                data-ui-select2>
                            <option value="0"></option>
                            @{
                                int y = DateTime.Now.Year;
                                for (int i = y - 5; i <= y + 5; i++)
                                {
                                    var year = i;
                                    <option value=@year>@year</option>

                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>
                            Month
                        </label>
                        <select id="CmbMonth" name="month" data-placeholder="Pick an Employee" ng-model="SearchObj.Month" class="selectUI" ng-change="Find()"
                                data-ui-select2>
                            <option value="0"></option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>


                    <br />
                    <div class="form-group text-center">
                        <button type="submit" id="SearchButton" ng-disabled="InsentivePaymentReport.$invalid"
                                class="btn btn-primary">
                            Show
                        </button>
                        <button type="reset" id="ResetSearchButton" class="btn btn-default" ng-click="ResetReport()">Reset</button>
                    </div>
                </form>
            </div>
            }
        </div>
    </section>
    
    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }
    </style>
</div>

<script src="~/Scripts/Sales/IncentivePaymentController.js"></script>
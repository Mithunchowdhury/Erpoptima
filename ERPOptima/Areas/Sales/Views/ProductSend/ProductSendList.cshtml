@{
    ViewBag.Title = "ProductSendList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Product Send List</h2>
<div ng-controller="business">
    <section class="margin-top-10 col-sm-4 col-sm-offset-4 col-xs-12">
        <div class="box box-primary ">
            <div class="box-body no-padding margin">


                <div class="form-group">
                    <label for="txtName">Date From</label>
                    <input type="text" ng-model="Business.Name" class="form-control" id="txtName" placeholder="">
                </div>
                <div class="form-group">
                    <label for="txtName">Date To</label>
                    <input type="text" ng-model="Business.Name" class="form-control" id="txtName" placeholder="">
                </div>
               
                <div class="text-center">
                    <button type="submit" class="btn btn-success" ng-disabled="Businesses.$invalid" ng-click="Save()">Load</button>
                    <button type="submit" class="btn btn-default" ng-click="Reset()">Reset</button>
                </div>
                <br />
            </div>
        </div>
    </section>
    <section class="margin-top-10 col-sm-12 col-xs-12">
        <div class="box box-primary margin">
            <div class="box-header" style="cursor: move;">
                <i class="fa fa-table"></i>
                <h3 class="box-title">
                    Product Send List
                </h3>
                <input type="text" style="margin: 8px;" class="pull-right" ng-model="SearchList" placeholder="Search" />
            </div>

            <div class="box-body no-padding">
                <div class="panel panel-default">
                    <table class="table  table-striped">
                        <thead>
                            <tr>
                                <th style="width:5%">SL</th>
                                <th style="width:10%">Code</th>
                                <th style="width:20%">Gate pass</th>
                                <th style="width: 15%">Vehicle No</th>
                                <th style="width: 10%; text-wrap: normal">Date</th>
                                <th style="width: 10%; text-wrap: normal">Details</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="div-table-content">
                        <table class="table  table-striped">
                            <tbody>
                                <tr ng-repeat="resource in Resources | filter:SearchList">
                                    <td style="width:10%">{{resource.Name}}</td>
                                    <td style="width:35%">{{resource.Name}}</td>
                                    <td style="width:20%"></td>
                                    <td style="width:20%">
                                        <button class="btn btn-success btn-xs" id="editRowBtn{{data.Id}}" ng-click="setFortEdit(data)"><i class="fa fa-edit"></i> Edit</button>
                                        <button class="btn btn-success btn-xs" id="editRowBtn{{data.Id}}" ng-click="setFortEdit(data)"><i class="fa fa-edit"></i> Remove</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div ng-class="{overlay:ShowLoading}"></div>
                <div class="{loading-img:ShowLoading}"></div>
            </div>
        </div>
    </section>
    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 280px;
            overflow-y: auto;
        }
    </style>

</div>
@{
    ViewBag.Title = "Company User Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center section-title">Company User Mapping</h2>
<div ng-controller="companyUser">
    <section class="margin-top-10 col-sm-5 col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">User Information</h3>
            </div>
            <div class="box-body">

                <form name="User">
                    <div class="form-group">

                        <label for="cmbUser">User Name<span style="color:red">*</span></label>
                        <select class="selectUI" id="cmbUser" data-placeholder="Pick a User" ui-select2 ng-model="UserId" ng-change="CompanyInfo()" required>
                            <option class=""></option>
                            <option ng-repeat="data in CompanyUserIdAndName" value={{data.Id}}>{{data.Name}}</option>
                        </select>

                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success" ng-disabled="ButtonDisabled" ng-click="Save()">Save</button>
                        <button type="submit" class="btn btn-default" ng-click="Reset()">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section class="margin-top-10 col-sm-7 col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Company Information</h3>
            </div>
            <div class="box-body">

                <div>
                    <table ng-table="tableParams" class="table table-responsive">

                        <tbody ng-repeat="data in $data">

                            <tr id="tr{{data.Id}}" ng-class-odd="'odd'" ng-class-even="'even'">
                                <td class="rowTd" data-title="'S.L'" sortable="'Name'">{{$index+1}}</td>
                                <td class="rowTd" data-title="'Status'" sortable="'Status'"><input type="checkbox" class="" ng-model="data.Status" /></td>
                                <td class="rowTd" data-title="'Company Name'" sortable="'LoginName'">{{data.Name}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
@section scripts{

    <script type="text/javascript" src="@Url.Content("/Scripts/Security/CompanyUser.js")"></script>

}
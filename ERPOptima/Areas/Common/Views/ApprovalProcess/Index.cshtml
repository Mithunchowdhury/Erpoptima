@{
    ViewBag.Title = "Approval Process";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Approval Process</h2>
<div ng-controller="approvalProcess">
    <section class="margin-top-10 col-sm-5 col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <i class="fa fa-info"></i>
                <h3 class="box-title">Approval Process Entry</h3>
            </div>
            <div class="box-body">

                <form name="ApprovalProcesses">

                    <div class="form-group">
                        <label for="txtName">Name  </label> <label style="color:red">*</label>
                        <input type="text" ng-model="ApprovalProcess.Name" class="form-control" id="txtName" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="txtSN">Short Name</label><label style="color:red">*</label>
                        <input type="text" ng-model="ApprovalProcess.ShortName" class="form-control" id="txtSN" placeholder="" required>
                    </div>
                    <div class="checkbox">
                        Status  <input type="checkbox" ng-model="ApprovalProcess.Status" id="chkIsActive">
                    </div>
                    <div class="text-center">
                    <button type="submit" class="btn btn-success" ng-disabled="ApprovalProcesses.$invalid" ng-click="Save()">Save</button>
                    <button type="submit" class="btn btn-danger" ng-disabled="ButtonDisabled" ng-click="Delete()">Delete</button>
                        <button type="reset" class="btn btn-default" ng-click="Reset()">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section class="margin-top-10 col-sm-7 col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <i class="fa fa-table"></i>
                <h3 class="box-title">Approval Process Table</h3>
            </div>
            <div class="box-body">

                <div>
                    <table ng-table="tableParams" class="table table-responsive">

                        <tbody ng-repeat="data in $data">

                            <tr id="tr{{data.Id}}" ng-class-odd="'odd'" ng-class-even="'even'">
                                <td class="rowTd" data-title="'Name'" sortable="'Name'">{{data.Name}}</td>
                                <td class="rowTd" data-title="'Short Name'" sortable="'ShortName'">{{data.ShortName}}</td>

                                <td class="rowTd" data-title="'Status'" sortable="'Status'"><span ng-class="{'badge bg-green': data.Status,'badge bg-red': !data.Status}" class="">{{data.Status}}</span></td>

                                <td class="rowTd" data-title="'Action'">
                                    <button class="btn btn-success btn-xs" id="editRowBtn{{data.Id}}" ng-click="setFortEdit($index)"><i class="fa fa-edit"></i> Edit</button>
                                </td>
                            </tr>
                            <tr ng-show="editId===data.Id" ng-if="editId===data.Id"></tr>
                        </tbody>


                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/Common/ApprovalProcess.js")"></script>
}

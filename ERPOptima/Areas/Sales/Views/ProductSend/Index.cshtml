@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fieldset1 {
        font-family: sans-serif !important;
        border: 3px solid #1F497D !important;
        background: #ddd !important;
        border-radius: 5px !important;
        padding: 5px !important;
    }

    .legend1 {
        background: #1F497D !important;
        color: #fff !important;
        padding: 5px 5px !important;
        font-size: 12px !important;
        border-radius: 5px !important;
        box-shadow: 0 0 0 5px #ddd !important;
        margin-left: 20px !important;
        font-weight: bold;
        margin-top: 5px !important;
    }
</style>

<h2 class="text-center">Product Send</h2>
<div ng-controller="business">
    <section class="margin-top-10 col-sm-5 col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Product Send Entry</h3>
            </div>
            <div class="box-body">
                <form name="Businesses">
                    <div class="form-group">
                        <label for="txtName">Code<span style="color:red">*</span></label>
                        <input type="text" ng-model="Business.Name" class="form-control" id="txtName" placeholder="" required readonly>
                    </div>
                    <div class="form-group">
                        <label for="txtName">Gate pass no</label>
                        <input type="text" ng-model="Business.Name" class="form-control" id="txtName" placeholder="" required >
                    </div>
                    <div class="form-group">
                        <label for="txtName">Vehicle No<span style="color:red">*</span></label>
                        <input type="text" ng-model="Business.Name" class="form-control" id="txtName" placeholder="" required >
                    </div>
                  
                    
                   
                    <div>
                        <fieldset class="fieldset1">
                            <legend class="legend1">Product Details</legend>
                            <div class="form-group">
                                <label for="txtPrefix">Requisition<span style="color:red">*</span></label>
                                <select id="CmbMoule" placeholder="Pick a Requisition" ng-model="ModuleId" class="form-control input-sm" ng-change="ResourceInfo()" ui-select2>
                                    <option value=""></option>
                                    <option ng-repeat="data in CompanyModuleIdNName" value={{data.Id}}>{{data.Name}}</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="txtPrefix">Issue<span style="color:red">*</span></label>
                                <select id="CmbMoule" placeholder="Pick an Issue" ng-model="ModuleId" class="form-control input-sm" ng-change="ResourceInfo()" ui-select2>
                                    <option value=""></option>
                                    <option ng-repeat="data in CompanyModuleIdNName" value={{data.Id}}>{{data.Name}}</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="txtName">Destination Office</label>
                                <input type="text" ng-model="Business.Name" class="form-control" id="txtName" placeholder="" required readonly>
                            </div>
                            <div class="form-group">
                                <label for="txtName">Challen No<span style="color:red">*</span></label>
                                <input type="text" ng-model="Business.Name" class="form-control" id="txtName" placeholder="" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success" ng-disabled="Businesses.$invalid" ng-click="Save()">Add</button>
                                <button type="submit" class="btn btn-default" ng-click="Reset()">Reset</button>
                            </div>
                        </fieldset>
                    </div>

                </form>
            </div>
        </div>
    </section>

    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }

        .div-table-content1 {
            height: 100px;
            overflow-y: auto;
        }
    </style>
    <section class="margin-top-10 col-sm-7 col-xs-12">
        <div class="box box-primary margin">
            <div class="box-header" style="cursor: move;">
                <i class="fa fa-table"></i>
                <h3 class="box-title">
                    Product List
                </h3>
                <input type="text" style="margin: 8px;" class="pull-right" ng-model="SearchList" placeholder="Search" />
            </div>
            <div class="box-body no-padding">
                <div class="panel panel-default">
                    <table class="table  table-striped">
                        <thead>
                            <tr>
                                <th style="width:10%">SL</th>
                                <th style="width:20%">Requisition</th>
                                <th style="width:20%">Issue</th>
                                <th style="width:20%">Destination Office</th>
                                <th style="width:20%">Challen No</th>
                                <th style="width: 10%; text-wrap: normal">Action</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="div-table-content">
                        <table class="table  table-striped">
                            <tbody>
                                <tr ng-repeat="resource in Resources | filter:SearchList">
                                    <td style="width:10%">{{resource.Name}}</td>
                                    <td style="width:35%">{{resource.Name}}</td>
                                    <td style="width:20%">
                                        <button class="btn btn-success btn-xs" id="editRowBtn{{data.Id}}" ng-click="setFortEdit(data)"><i class="fa fa-edit"></i> Edit</button>
                                        <button class="btn btn-success btn-xs" id="editRowBtn{{data.Id}}" ng-click="setFortEdit(data)"><i class="fa fa-edit"></i> Remove</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success" ng-disabled="Businesses.$invalid" ng-click="Save()">Save</button>
                    <button type="submit" class="btn btn-default" ng-click="Reset()">Reset</button>
                </div>
                <div ng-class="{overlay:ShowLoading}"></div>
                <div class="{loading-img:ShowLoading}"></div>
            </div>
        </div>
    </section>
</div>
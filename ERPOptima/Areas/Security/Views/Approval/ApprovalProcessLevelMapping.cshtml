@{
    ViewBag.Title = "Approval ProcessLevel Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header text-center">

    <h2>Approval Process Level Mapping</h2>
</section>

<div class="content" ng-controller="ApprovalProcessLevelMappingController">

    <section class="col-sm-6  col-md-offset-3 col-xs-12">

        <div class="box box-primary">
            <div class="box-header" style="cursor: move;">

                <i class="fa fa-adjust"></i>
                <h3 class="box-title"> Assign Process Level </h3>
            </div>

            <div class="box-body">

                <div class="form-group">
                    @*<label>Module</label><label style="color:red">*</label>
                        <select ng-model="SelectedModule" class="form-control" ng-change="GetApprovalProcesses()" required>
                            <option ng-repeat="data in Modules" value={{data.Id}}>{{data.Name}}</option>
                        </select>*@
                    
                    <div class="row">
                        <label class="col-sm-4 col-xs-12" for="cmbUser">Module<span style="color:red">*</span></label>
                        <select class="col-sm-8  col-xs-12" data-placeholder="Pick a Module" ui-select2 ng-model="SelectedModule" ng-change="GetApprovalProcesses()" required>
                            <option class=""></option>
                            <option ng-repeat="data in Modules" value={{data.Id}}>{{data.Name}}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label class="col-sm-4  col-xs-12">Approval Process<span style="color:red">*</span></label>
                        <select ng-model="SelectedApprovalProcess" data-placeholder="Pick a Process" class="col-sm-8  col-xs-12" ui-select2 ng-change="GetProcessLevel()" required>
                            <option class=""></option>
                            <option ng-repeat="data in ApprovalProcesses" value={{data.Id}}>{{data.Name}}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div id="sortableProcessLevel">

                        <ul id="sortable" class="todo-list ui-sortable">
                            <li ng-repeat="item in ApprovalProcessMapping">
                                <!-- drag handle -->
                                <span class="handle">
                                    <i class="fa fa-ellipsis-v"></i>
                                    <i class="fa fa-ellipsis-v"></i>
                                </span>
                                <!-- checkbox -->
                                <input type="checkbox" ng-model="item.Mapped">
                                <small class="label label-success"><i class="fa fa-sort"></i>{{$index+1}}</small>
                                <span class="text">{{item.Name}}</span>

                            </li>
                        </ul>
                        <div>
                        </div>

                    </div>

                </div><!-- /.box-body-->

                <div class="text-center">
                    <button type="submit" class="btn btn-primary" ng-click="Save()" ng-disabled="SaveDisabled">Save </button>
                    <button type="submit" class="btn btn-warning" ng-click="Reset()">Reset </button>
                </div>
            </div>
    </section>
</div>

@section scripts{

    <script type="text/javascript" src="@Url.Content("/Scripts/Security/ApprovalProcessLevelMapping.js")"></script>

}
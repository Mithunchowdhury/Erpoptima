@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">

    <h2 class="text-center  section-title">Product List</h2><hr />
</section>

<div class="row content">

    <section class="col-sm-4 col-sm-offset-4">

        <div class="box box-primary">
            

            @using (Html.BeginForm("GetProductListReport", "SalesReport", FormMethod.Get, new { area = "Sales", target = "_blank" }))
            {
                <div class="box-body">
                    @*<form name="Search">*@

                    <div class="form-group text-center">
                        <button type="submit" id="SearchButton" class="btn btn-primary">Show</button>
                    </div>
                </div>




            }
        </div>
    </section>
    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }
    </style>
</div>

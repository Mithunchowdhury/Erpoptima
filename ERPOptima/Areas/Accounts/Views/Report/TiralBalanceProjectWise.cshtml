@{

    ViewBag.Title = "Trial Balance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Accounts/Report_TrialBalanceProjectWiseController.js"></script>
<section class="content-header">
    <h2 class="text-center section-title">Trial Balance (Project wise)</h2>
</section>

<div class="row content" ng-controller="TrialBalanceProjectWiseController">

    <div class="col-sm-5 col-sm-offset-3">

        <div class="box box-primary">
            <div class="box-header" style="cursor: move;">

                @*<i class="fa fa-search"></i>
                <h3 class="box-title"> Search</h3>*@
            </div>


            @using (Html.BeginForm("GetAnFTrialBalanceProjectWiseReport", "Report", FormMethod.Get, new { area = "Accounts", name = "Search", id = "Search", target = "_blank" }))
            {
                <div class="box-body">
                    @*<form name="Search">*@
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label>Date From</label>
                            <input type="text" class="form-control datetimepicker" ng-model="search.FromDate" name="FromDate" datetimepicker required>
                        </div>

                        <div class="form-group col-sm-6">
                            <label>Date To</label>
                            <input type="text" class="form-control" ng-model="search.ToDate" name="ToDate" datetimepicker required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3  col-xs-12">Business :</label>

                            <select class="col-sm-9  col-xs-12" ui-select2 ng-model="BusinessId" name="BusinessId" data-placeholder="Pick a Business" ng-change="ProjectInfo()">
                                <option value=""></option>
                                <option ng-repeat="data in Businesses" value={{data.Id}}>{{data.Name}}</option>
                            </select>
                        </div>
                    </div>

                    @*<div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">Project  :</label>
                            <select class="col-sm-9" data-ui-select2="projectOptions" name="ProjectId" ng-model="search.ProjectId">
                                <option value=""></option>
                                <option ng-repeat="project in Projects" value="{{project.Id}}">{{project.Name}}</option>
                            </select>
                        </div>
                    </div>*@
                    @*</form>*@
                </div><!-- /.box-body-->



                <div class="row center-align">
                    <button type="submit" id="SearchButton" class="btn btn-primary">Show Report</button>
                </div>
                <br />
            }
        </div>
    </div>
    
</div>

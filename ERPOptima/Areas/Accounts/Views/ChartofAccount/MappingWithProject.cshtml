@{
    ViewBag.Title = "Mapping With Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header text-center">

    <h2 class="section-title">Project Account Head Mapping</h2>
</section>
<div class="" ng-controller="mappingWithProjectController">

    <section class="col-sm-6 col-xs-12 margin-top-10">

        <div class="box box-primary">
            <div class=" box-header" style="cursor: move;">

                <i class="fa fa-refresh"></i>
                <h3 class="box-title">
                    Project
                </h3>
            </div>
            <div class="box-body no-padding">

                <form role="form" name="Project">
                    <div class="box-body">
                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-4 col-xs-12">Business :<span style="color:red">*</span></label>

                                <select class="col-sm-8 col-xs-12" ui-select2 ng-model="BusinessId" data-placeholder="Pick a Business" ng-change="ProjectInfo()" required>
                                    <option value=""></option>
                                    <option ng-repeat="data in Businesses" value={{data.Id}}>{{data.Name}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-4 col-xs-12">Project List :<span style="color:red">*</span></label>
                                <select class="col-sm-8 col-xs-12" ui-select2 ng-model="SelectedProject" data-placeholder="Pick a Project">
                                    <option value=""></option>
                                    <option ng-repeat="project in Projects" value="{{project.Id}}">{{project.Name}}</option>
                                </select>
                            </div>
                        </div>

                        @*<div class="form-group">

                                {{SelectedProject}}
                            </div>*@
                    </div><!-- /.box-body -->

                    <div class="text-center">

                        <button type="submit" class="btn btn-success" ng-disabled="SaveDisabled" ng-click="Save()">Save</button>

                        <button type="submit" class="btn btn-default" ng-click="Reset()">Reset</button>
                    </div>
                    <br />
                </form>
            </div><!-- /.box-body-->
        </div>
    </section>
    <style type="text/css">
        table {
            table-layout: fixed;
        }

        .div-table-content {
            height: 400px;
            overflow-y: auto;
        }
    </style>
    <section class="col-sm-6 col-xs-12 margin-top-10 ">
        <div class="box box-primary">
            <div class="box-header" style="cursor: move;">
                <i class="fa fa-table"></i>
                <h3 class="box-title">
                    Account Head List
                </h3>
                <input type="text" style="margin:8px" class="pull-right" ng-model="SearchList" placeholder="Search" />
            </div>
            <div class="box-body no-padding">

                <div class="panel panel-default">
                    <table class="table  table-striped">
                        <thead>
                            <tr>
                                <th width="24%">Account Code</th>
                                <th width="56%">Account Name</th>
                                <th width="20%"><input type="checkbox" ng-model="CheckedAll" />&nbsp;&nbsp;All</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="div-table-content">
                        <table class="table  table-striped">
                            <tbody>
                                <tr ng-repeat="opningBalance in OpeningBalances|filter:SearchList">
                                    <td width="24%">{{opningBalance.Code}}</td>
                                    <td width="59%">{{opningBalance.Name}}</td>
                                    <td width="17%">
                                        <input type="checkbox" ng-model="opningBalance.Mapped" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div><!-- /.box-body-->
            <div ng-class="{overlay:ShowLoading}"></div>
            <div class="{loading-img:ShowLoading}"></div>
        </div>
    </section>
</div>
@section scripts{
    <script type="text/javascript" src="@Url.Content("/Scripts/Accounts/MappingWithProject.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/blockUI.js")"></script>

}
